{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EvbManageRules",
      "Effect": "Allow",
      "Action": [
        "events:PutRule", "events:DeleteRule", "events:EnableRule", "events:DisableRule",
        "events:PutTargets", "events:RemoveTargets", "events:DescribeRule"
      ],
      "Resource": "arn:aws:events:<REGION>:<ACCOUNT_ID>:rule/<BUS_NAME>/<RULE_NAME>"
    }
  ]
}

