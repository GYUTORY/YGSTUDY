{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "KinesisRead",
      "Effect": "Allow",
      "Action": [
        "kinesis:GetShardIterator", "kinesis:GetRecords",
        "kinesis:DescribeStream", "kinesis:DescribeStreamSummary"
      ],
      "Resource": "arn:aws:kinesis:<REGION>:<ACCOUNT_ID>:stream/<STREAM_NAME>"
    }
  ]
}

