{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "KmsDecryptOnly",
      "Effect": "Allow",
      "Action": ["kms:Decrypt"],
      "Resource": "arn:aws:kms:<REGION>:<ACCOUNT_ID>:key/<KEY_ID>",
      "Condition": {
        "StringEquals": { "kms:EncryptionContext:App": "orders" }
      }
    }
  ]
}

