{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "KmsEncryptOnlyViaS3",
      "Effect": "Allow",
      "Action": ["kms:Encrypt", "kms:GenerateDataKey*"],
      "Resource": "arn:aws:kms:<REGION>:<ACCOUNT_ID>:key/<KEY_ID>",
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "s3.<REGION>.amazonaws.com",
          "kms:EncryptionContext:App": "orders"
        }
      }
    }
  ]
}

