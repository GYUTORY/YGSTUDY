{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SqsConsume",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage", "sqs:DeleteMessage", "sqs:ChangeMessageVisibility",
        "sqs:GetQueueAttributes", "sqs:GetQueueUrl"
      ],
      "Resource": "arn:aws:sqs:<REGION>:<ACCOUNT_ID>:<QUEUE_NAME>",
      "Condition": { "Bool": { "aws:SecureTransport": "true" } }
    }
  ]
}

